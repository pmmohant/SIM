<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Recovery Automation Sanity Test Suite" parallel="classes" 	thread-count="3" verbose="1">
		
	 <!-- Running on IE 10 -->
    <test  name="Lavante - Recovery - Running on IE 10">
		<parameter name="Platform" value="Windows" />
		<parameter name="Browser" value="internet explorer" />
		<parameter name="Version" value="10" />	
		<classes> 
		  	 <class name="lavante.recovery.testsuites.SanityTestSuite" /> 
		</classes>
	</test>  
		
	<!-- Running on FF 44 -->
	<test thread-count="1" name="Lavante - Recovery - Running on Firefox v45">		
		<parameter name="Platform" value="Windows" />
		<parameter name="Browser" value="firefox" />
		<parameter name="Version" value="45" />
		<classes> 
		  	 <class name="lavante.recovery.testsuites.SanityTestSuite" /> 
		</classes>
	</test>  
	
    <!-- Running on Chrome 45 -->
	<test thread-count="1" name="Lavante - Recovery - Running on Chrome v45">	
		<parameter name="Platform" value="Windows" />
		<parameter name="Browser" value="chrome" />
		<parameter name="Version" value="45" />
		<classes> 
		  	 <class name="lavante.recovery.testsuites.SanityTestSuite" /> 
		</classes> 
	</test>
</suite> 
